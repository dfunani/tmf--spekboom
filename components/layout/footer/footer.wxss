.footer-container{
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: flex-start;
    background-color: #e9ecef;
    color: #868e96;
    text-align: start;
    padding: 30px;
}

.footer-title{
    color: #343A40;
    font-size: 16px;
    font-weight: bold;
    margin-bottom: 3px;
    padding-top: 96px;
    text-transform: uppercase;
}

.footer-desc{
    margin-block: 16px;
}

.footer-icons-container{
    margin-bottom: 48px;
}

.footer-icons-container > *{
    width: 16px;
    height: 16px;
    margin: 5px;
}

.footer-links-container{
    margin-bottom: 48px;
}

.footer-links-header{
    font-size: 14px;
    margin-bottom: 16px;
    font-weight: bolder;
    text-transform: uppercase;
    color: #343A40;
}

.footer-links-item{
    font-size: 16px;
}
.uppercase{
    text-transform: uppercase;
}

.footer-closer{
    background-color: #343A40;
    color: white;
    padding: 24px;
    margin: 0;
    font-size: 14px;
}
